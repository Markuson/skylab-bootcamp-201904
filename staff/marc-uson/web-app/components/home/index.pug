include ../search/index
include ../results/index
include ../detail/index

block content
    h1 Hola, #{name}!
    form(action='/logout' method='post')
        button Logout
    +search(query)
    if message
        +feedback(message)
    if (ducks)
        +results(ducks)
    if (duck)
        +detail(duck)
